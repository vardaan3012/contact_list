<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
    <h1 id="page-heading">
        <i class="fas fa-address-book"></i>
        contact list
    </h1>

<div id="contact-list-container">
    <ul>
       <% for (let i of contact_list) { %>
            <li class="contact">
                <div class="details">
               <p>contact: <%= i.name %></p>
              <p>phone: <%= i.phone %></p>
            </div>
            <div class="delete-button">
                <a href="/delete-contact/?id=<%= i._id%>">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </div>
            </li>
        <% } %>
    </ul>
</div>


    <form action="/create-contact" method="post">
        <input type="text" name="name" placeholder="name" required>
        <input type="number" name="phone" placeholder="phone" required>
        <button type="submit">add contact</button>
    </form> 
<script src="https://kit.fontawesome.com/28e199fccc.js" crossorigin="anonymous"></script>
<script type="text/javascript" src="/css/js/home.js"></script>
</body>
</html>